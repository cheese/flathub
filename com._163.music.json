{
    "app-id": "com._163.music",
    "branch": "stable",
    "runtime": "org.gnome.Sdk",
    "runtime-version": "3.28",
    "base": "org.videolan.VLC",
    "base-version": "stable",
    "sdk": "org.gnome.Sdk",
    "tags": ["proprietary"],  
    "separate-locales": false,
    "build-options": {
        "no-debuginfo": true
    },
    "finish-args": [
        "--share=ipc", "--socket=x11",
        "--socket=pulseaudio",
        "--share=network",
        "--device=dri",
        "--filesystem=xdg-music",
        "--persist=.config/netease-cloud-music",
        "--persist=.cache/netease-cloud-music"
    ],
    "command": "netease-cloud-music",
    "modules": [
        {
            "name": "gconf",
            "cleanup": [
              "/bin",
              "/libexec",
              "/share/sgml",
              "/etc/xdg/autostart",
              "/share/dbus-1"
            ],
            "config-opts": [
                "--disable-static",
                "--disable-gtk-doc",
                "--disable-orbit",
                "--disable-introspection"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/GConf/3.2/GConf-3.2.6.tar.xz",
                    "sha256": "1912b91803ab09a5eed34d364bf09fe3a2a9c96751fde03a4e0cfa51a04d784c"
                }
            ]
        },
        {
            "name": "netease-cloud-music",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm755 apply_extra /app/bin/apply_extra",
                "ln -s ../extra/bin/netease-cloud-music /app/bin/netease-cloud-music",
                "mkdir -p /app/share/metainfo",
                "cp com._163.music*.appdata.xml /app/share/metainfo/"
            ],
            "sources": [
                {
                    "type": "script",
                    "dest-filename": "apply_extra",
                    "commands": [
                        "ar x netease-cloud-music.deb",
                        "ls -l *",
                        "tar fx data.tar.xz",
                        "mv usr/* ."
                    ]
                },
                {
                    "type": "file",
                    "path": "com._163.music.appdata.xml"
                },
                {
                    "type": "extra-data",
                    "filename": "netease-cloud-music.deb",
                    "only-arches": ["x86_64"],
                    "url": "http://d1.music.126.net/dmusic/netease-cloud-music_1.1.0_amd64_ubuntu.deb",
                    "sha256": "a256ab183513abcaf26279700aaefb8f6a4da89d9d0a498d35a95d5a7d3a345e",
                    "size": 68515076
                }
            ]
        }
    ]
}
