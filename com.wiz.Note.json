{
  "app-id": "com.wiz.Note",
  "runtime": "org.kde.Platform",
  "runtime-version": "5.12",
  "sdk": "org.kde.Sdk",
  "separate-locales": false,
  "command": "WizNote",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland",
    "--device=dri",
    "--persist=.wiznote", 
    "--persist=.local",
    "--filesystem=xdg-documents"
  ],
  
  "rename-icon": "wiznote",
  "rename-desktop-file": "wiznote.desktop",
  
  "modules": [
    {
      "name": "WizNote",
      "buildsystem": "cmake",
      "build-commands": [
        "install -D -m0644 -t /app/share/metainfo/ com.wiz.Note.appdata.xml"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/WizTeam/WizQTClient.git",
          "branch": "2.7.2",
          "commit": "6018c4c96c7142e9de8a4c7a95ee8595441e1fe2"
        },
        {
          "type": "file",
          "path": "com.wiz.Note.appdata.xml"
        }
      ]
    }
  ]
}
