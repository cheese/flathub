{
  "app-id": "com.wiz.Note",
  "runtime": "org.kde.Platform",
  "runtime-version": "5.12",
  "sdk": "org.kde.Sdk",
  "separate-locales": false,
  "command": "WizNote",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland",
    "--device=dri",
    "--persist=.wiznote", 
    "--persist=.local",
    "--filesystem=xdg-documents"
  ],
  
  "modules": [
    {
      "name": "WizNote",
      "buildsystem": "cmake",
      "build-commands": [
      	"install -D -m0644 -t /app/share/applications/ com.wiz.Note.desktop",
        "install -D -m0644 -t /app/share/metainfo/ com.wiz.Note.appdata.xml"
      ],
      "post-install": [
        "rm -rf /app/share/icons/hicolor/{8x8,16x16,24x24,32x32,48x48,512x512}",
        "mv /app/share/icons/hicolor/64x64/apps/{wiznote.png,com.wiz.Note.png}",
        "mv /app/share/icons/hicolor/128x128/apps/{wiznote.png,com.wiz.Note.png}",
        "mv /app/share/icons/hicolor/256x256/apps/{wiznote.png,com.wiz.Note.png}",
        "rm /app/share/applications/wiznote.desktop"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/WizTeam/WizQTClient.git",
          "branch": "2.7.2",
          "commit": "6018c4c96c7142e9de8a4c7a95ee8595441e1fe2"
        },
        {
          "type": "file",
          "path": "com.wiz.Note.desktop"
        },
        {
          "type": "file",
          "path": "com.wiz.Note.appdata.xml"
        }
      ]
    }
  ]
}
